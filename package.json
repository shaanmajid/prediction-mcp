{
  "name": "prediction-mcp",
  "version": "0.1.0",
  "description": "MCP server providing unified access to prediction market data from Kalshi and Polymarket",
  "author": "Shaan Majid",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shaanmajid/prediction-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/shaanmajid/prediction-mcp/issues"
  },
  "homepage": "https://github.com/shaanmajid/prediction-mcp#readme",
  "keywords": [
    "mcp",
    "prediction-markets",
    "kalshi",
    "polymarket",
    "model-context-protocol"
  ],
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "docs:generate": "bun run scripts/generate-docs.ts",
    "docs:check": "bun run scripts/check-docs.ts",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@polymarket/clob-client": "5.1.1",
    "@t3-oss/env-core": "^0.13.10",
    "exponential-backoff": "^3.1.3",
    "kalshi-typescript": "^3.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
